    <label for="star16"><span class="text">最高</span>★</label>

    <%= f.radio_button :food, 4 ,id: 'star17'%>
    <label for="star17"><span class="text">良い</span>★</label>

    <%= f.radio_button :food, 3 ,id: 'star18'%>
    <label for="star18"><span class="text">普通</span>★</label>

    <%= f.radio_button :food, 2 ,id: 'star19'%>
    <label for="star19"><span class="text">微妙</span>★</label>

